{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Proportion of Nuclear Explosions by Method of Deployment",
    "data": {
      "url": "https://raw.githubusercontent.com/gman0028/FIT3179-DataVis2/refs/heads/main/nuclear_explosions_updated.csv"
    },
    "params": [
      {
        "name": "Country_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "USA",
            "USSR",
            "FRANCE",
            "UK",
            "CHINA",
            "INDIA",
            "PAKISTAN",
            "NORTH KOREA"
          ],
          "labels": [
            "All",
            "USA",
            "USSR",
            "France",
            "UK",
            "China",
            "India",
            "Pakistan",
            "North Korea"
          ],
          "name": "Country Selection: "
        }
      }
    ],
    "transform": [
      {
        "filter": "Country_selection == null || datum['Country'] == Country_selection"
      },
      {
        "aggregate": [{"op": "count", "as": "Explosion Count"}],
        "groupby": ["Type"]
      },
      {
        "joinaggregate": [{
          "op": "sum",
          "field": "Explosion Count",
          "as": "TotalExplosions"
        }],
        "groupby": []
      },
      {
        "calculate": "datum['Explosion Count'] / datum['TotalExplosions']",
        "as": "Proportion"
      }
    ],
    "encoding": {
      "theta": {
        "field": "Proportion",
        "type": "quantitative",
        "stack": true
      },
      "color": {
        "field": "Type",
        "type": "nominal",
        "title": "Method of Deployment",
        "scale": {
          "range": [
             "#8da0cb",  
          "#66c2a5",  
          "#fc8d62",  
          "#e78ac3",  
          "#a6d854",  
          "#ffd92f",  
          "#e5c494",  
          "#c7eae5",  
          "#fdbf6f",  
          "#b3b3b3",  
          "#80b1d3",  
          "#bebada",  
          "#fb8072",  
          "#fdb462",  
          "#b3de69",  
          "#d9d9d9",
          "#e41a1c",  
          "#984ea3",  
          "#ff7f00",  
          "#a6cee3",  
          "#377eb8",  
          "#a65628",  
          "#97d8c4",  
          "#cc7987" 
          ]
        }
      },
      "tooltip": [
        {"field": "Type", "type": "nominal", "title": "Method of Deployment"},
        {"field": "Explosion Count", "type": "quantitative", "title": "Count of Explosions"},
        {"field": "Proportion", "type": "quantitative", "format": ".1%", "title": "Proportion of Explosions"}
      ]
    },
    "mark": {
      "type": "arc",
      "outerRadius": 250
    }
  } 
