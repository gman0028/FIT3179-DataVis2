{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Proportion of Nuclear Explosions by Method of Deployment",
    "data": {
      "url": "https://raw.githubusercontent.com/gman0028/FIT3179-Homework-Week9/refs/heads/main/nuclear_explosions_updated.csv"
    },
    "params": [
      {
        "name": "Country_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "USA",
            "USSR",
            "FRANCE",
            "UK",
            "CHINA",
            "INDIA",
            "PAKISTAN",
            "NORTH KOREA"
          ],
          "labels": [
            "Total",
            "USA",
            "USSR",
            "France",
            "UK",
            "China",
            "India",
            "Pakistan",
            "North Korea"
          ],
          "name": "Country Selection: "
        }
      }
    ],
    "transform": [
      {
        "filter": "Country_selection == null || datum['Country'] == Country_selection"
      },
      {
        "aggregate": [{"op": "count", "as": "Explosion Count"}],
        "groupby": ["Type"]
      },
      {
        "joinaggregate": [{
          "op": "sum",
          "field": "Explosion Count",
          "as": "TotalExplosions"
        }],
        "groupby": []
      },
      {
        "calculate": "datum['Explosion Count'] / datum['TotalExplosions']",
        "as": "Proportion"
      }
    ],
    "encoding": {
      "theta": {
        "field": "Proportion",
        "type": "quantitative",
        "stack": true
      },
      "color": {
        "field": "Type",
        "type": "nominal",
        "title": "Method of Deployment",
        "scale": {
          "range": [
            "#8c8c8c",  
            "#a6cee3",  
            "#b2df8a",  
            "#fb9a99",  
            "#fdbf6f",  
            "#cab2d6",  
            "#ffff99",  
            "#1f78b4",  
            "#6a3d9a",  
            "#b15928",  
            "#ffed6f",  
            "#a6a6a6"   
          ]
        }
      },
      "tooltip": [
        {"field": "Type", "type": "nominal", "title": "Method of Deployment"},
        {"field": "Explosion Count", "type": "quantitative", "title": "Count of Explosions"},
        {"field": "Proportion", "type": "quantitative", "format": ".1%", "title": "Proportion of Explosions"}
      ]
    },
    "mark": {
      "type": "arc",
      "outerRadius": 200
    }
  } 
