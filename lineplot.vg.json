{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 600,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "padding": {"left": 20, "right": 20, "top": 10, "bottom": 10},
  "title": "Count of Nuclear Explosions Over Time",
  "data": {
    "url": "https://raw.githubusercontent.com/gman0028/FIT3179-DataVis2/refs/heads/main/nuclear_explosions_updated.csv"
  },
  "params": [
    {
      "name": "Country_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "USA",
          "USSR",
          "FRANCE",
          "UK",
          "CHINA",
          "INDIA",
          "PAKISTAN",
          "NORTH KOREA"
        ],
        "labels": [
          "Total",
          "USA",
          "USSR",
          "France",
          "UK",
          "China",
          "India",
          "Pakistan",
          "North Korea"
        ],
        "name": "Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Country_selection == null || datum['Country'] == Country_selection"
    },
    {
      "aggregate": [
        {
          "op": "count",
          "as": "Explosion Count"
        }
      ],
      "groupby": ["Year"]
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "color": "red",
        "point": {
          "filled": true,
          "fill": "red"
        }
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "axis": {
            "title": "Year",
            "format": "d",
            "tickMinStep": 1,
            "grid": false  
          },
          "scale": {"domain": [1940, 2020]}
        },
        "y": {
          "field": "Explosion Count",
          "type": "quantitative",
          "title": "Count of Explosions",
          "axis": {"grid": false}  
        },
        "tooltip": [
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {"field": "Explosion Count", "type": "quantitative", "title": "Number of Explosions"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dy": -10,
        "dx": -50,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative"
        },
        "y": {
          "field": "Explosion Count",
          "type": "quantitative", 
          "axis": {"title": "Count of Explosions"}
        },
        "text": {
          "condition": {
            "test": "datum['Year'] == 1945",
            "value": "End of World War II"
          }
        },
        "color": {"value": "black"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,  
        "dy": -3,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative"
        },
        "y": {
          "field": "Explosion Count",
          "type": "quantitative", 
          "axis": {"title": "Count of Explosions"}
        },
        "text": {
          "condition": {
            "test": "datum['Year'] == 1962",
            "value": "Cuban Missile Crisis"
          }
        },
        "color": {"value": "black"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,  
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative"
        },
        "y": {
          "field": "Explosion Count",
          "type": "quantitative", 
          "axis": {"title": "Count of Explosions"}
        },
        "text": {
          "condition": {
            "test": "datum['Year'] == 1989",
            "value": "End of the Cold War"
          }
        },
        "color": {"value": "black"}
      }
    },
    {
      "mark": {
        "type": "rule",
        "stroke": "black",
        "strokeWidth": 2,
        "strokeDash": [6, 4]
      },
      "encoding": {
        "x": {
          "datum": 1996,
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -200,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "datum": 1996,
          "type": "quantitative"
        },
        "y": {
          "datum": 1  
        },
        "text": {"value": "Comprehensive Nuclear-Test-Ban Treaty (CTBT)"},
        "color": {"value": "black"}
      }
    }
  ]
}
